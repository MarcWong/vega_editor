                    "field": "value",
                    "type": "quantitative",
                    "stack": "normalize",
                    "axis": {
                        "grid": false,
                        "tickCount": 5
                    },
                    "scale": {
                        "domain": [
                            0,
                            1
                        ]
                    }
                },
                "color": {
                    "condition": {
                        "test": "datum.Characteristic === 'Restaurant manager' && datum.key === 'Would like more hours'",
                        "value": "#27c9c9"
                    },
                    "field": "key",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Happy with current hours",
                            "Would like more hours",
                            "Would like fewer hours"
                        ],
                        "range": [
                            "lightgreen",
                            "lightblue",
