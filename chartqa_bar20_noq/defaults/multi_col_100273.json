                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 0,
                "dy": 0,
                "angle": 0,
                "fontSize": 30,
                "fontStyle": "normal",
                "fontWeight": 400,
                "font": "serif",
                "opacity": 1
            },
            "encoding": {
                "y": {
                    "field": "Characteristic",
                    "type": "nominal"
                },
                "x": {
                    "field": "value",
                    "type": "quantitative",
                    "stack": "normalize"
                },
                "text": {
                    "condition": {
